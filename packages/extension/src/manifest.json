{
  "name": "Growth Toolkit",
  "version": "1.0.0",
  "manifest_version": 3,
  "icons": {
    "16": "icon/branding_16.png",
    "32": "icon/branding_32.png",
    "48": "icon/branding_48.png",
    "96": "icon/branding_96.png",
    "128": "icon/branding_128.png"
  },
  "permissions": [
    "cookies",
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "action": {
    "default_popup": "src/@popup/popup.html"
  },
  "content_scripts": [
    {
      "run_at": "document_idle",
      "all_frames": false,
      "matches": [
        "*://chat.openai.com/",
        "*://chat.openai.com/c/*"
      ],
      "js": [
        "src/content/GPTToolbarEntry.tsx"
      ]
    },
    {
      "run_at": "document_idle",
      "all_frames": false,
      "world": "MAIN",
      "matches": [
        "*://miro.com/*"
      ],
      "js": [
        "src/content/MiroToolbarEntry.tsx"
      ]
    },
    {
      "run_at": "document_idle",
      "all_frames": false,
      "matches": [
        "*://www.producthunt.com/*"
      ],
      "js": [
        "src/competitor-scrapers/product-hunt/ProductHunt.ts"
      ]
    },
    {
      "run_at": "document_idle",
      "all_frames": false,
      "matches": [
        "*://www.gartner.com/*"
      ],
      "js": [
        "src/competitor-scrapers/gartner/Gartner.ts"
      ]
    },
    {
      "run_at": "document_idle",
      "all_frames": false,
      "matches": [
        "*://www.capterra.com/*"
      ],
      "js": [
        "src/competitor-scrapers/capterra/Capterra.ts"
      ]
    },
    {
      "run_at": "document_idle",
      "all_frames": false,
      "matches": [
        "*://www.trustradius.com/*"
      ],
      "js": [
        "src/competitor-scrapers/trust-radius/TrustRadius.ts"
      ]
    },
    {
      "run_at": "document_idle",
      "all_frames": false,
      "matches": [
        "*://www.g2.com/*"
      ],
      "js": [
        "src/competitor-scrapers/g2/G2.ts"
      ]
    },
    {
      "run_at": "document_idle",
      "all_frames": false,
      "matches": [
        "*://*.similarweb.com/*"
      ],
      "js": [
        "src/competitor-scrapers/similarweb/SimilarwebEntry.tsx"
      ]
    },
    {
      "run_at": "document_idle",
      "all_frames": false,
      "world": "MAIN",
      "matches": [
        "*://*.similarweb.com/*"
      ],
      "js": [
        "src/competitor-scrapers/similarweb/SimilarwebAgent.ts"
      ]
    }
  ],
  "background": {
    "service_worker": "src/background/serviceWorker.ts"
  },
  "web_accessible_resources": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "resources": [
        "*"
      ]
    }
  ]
}